html
  height 100%
body 
  background #efefef 
  height 100%
  


#drawing
  width 100%
  height 100%
  overflow hidden

#timeline
  position absolute
  bottom 300px
  left 0px
  right 0px
  height 80px
  background #222
  color #fff
  overflow hidden
  #timeline__indicator
    position absolute
    bottom 0
    top 0
    left 20px
    height 80px
    width 0px
    outline 2px solid lime
    color #fff
  #timeline__keyframes
    position absolute
    bottom 0
    left 0px
    right 0px
    top 0
    overflow hidden
    cursor pointer
    .keyframe
      border-radius 50%;
      width 20px
      height 20px
      background #fff
      position absolute
      top calc( 50% - 10px )
      &:hover
        background lime
      &--selected
        background lime
    
#options
  position absolute
  bottom 0px
  left 0px
  right 0px
  height 300px
  background #333
  color #fff
  label
      display block
  input
    margin-bottom 5px
  &:after
    content ''
    display block
    clear both
#tools
  position absolute
  left 10px
  top 10px

#tools__circle
  width 100px
  height 100px
  border 15px solid #333
  border-radius 50%
  position relative
  span
    position absolute
    left 50%
    right -15px
    height 16px
    top calc( 50% - 8px)
    border-right 16px solid lime
  
.options__section {
  width: 33%;
  float: left;
}